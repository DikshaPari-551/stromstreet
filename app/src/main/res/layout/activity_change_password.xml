<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ChangePassword">

    <ImageView
        android:layout_width="229.5dp"
        android:layout_height="116.5dp"
        android:layout_marginTop="36dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Change Password"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Create your new password"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="@color/darkgrey"
        android:textSize="12.5sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_edit_text"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/old_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:hint="Old password"
            android:fontFamily="@font/opensans_regular"
            android:textColorHint="@color/darkgrey"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/eye_img"

            android:id="@+id/eye_img_reset_new_pass"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/username_sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:id="@+id/reset_Password_errtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:textStyle="normal"
        android:fontFamily="@font/opensans_regular"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_edit_text">

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/changepassword"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginRight="40dp"
            android:hint="New password"
            android:fontFamily="@font/opensans_regular"
            android:textColorHint="@color/darkgrey"
            android:textSize="15sp" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/eye_img"
            android:id="@+id/eye_img_reset_pss"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/reset_re_neterPassword_errtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text=""
        android:fontFamily="@font/opensans_regular"
        android:visibility="gone"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:textStyle="normal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="40dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/layout_submittt"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_background_button">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="SUBMIT"
                android:fontFamily="@font/opensans_regular"
                android:id="@+id/SUB_BTTN"
                android:textColor="@color/white"
                android:textSize="17.5sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>