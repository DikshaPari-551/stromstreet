<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragments.ProfileChangeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/black"
            android:elevation="20dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_arrow_profile_change"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Profile"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="50dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/cuserProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/circleprofile"/>

                    <ImageView
                        android:id="@+id/img_camera_profile"
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/camera" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/background_edit_text">

                    <EditText
                        android:id="@+id/fullname_profile_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:maxLength="30"
                        android:inputType="textPersonName"
                        android:background="@null"
                        android:text=""
                        android:hint="Full name"
                        android:fontFamily="@font/opensans_regular"
                        android:singleLine="true"
                        android:textColorHint="@color/darkgrey"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/name_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:maxLength="20"
                    android:visibility="gone"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/background_edit_text">

                    <EditText
                        android:id="@+id/username_profile_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:hint="Username"
                        android:text=""
                        android:fontFamily="@font/opensans_regular"
                        android:singleLine="true"
                        android:textColorHint="@color/darkgrey"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/username_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:visibility="gone"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/background_edit_text">

                    <EditText
                        android:id="@+id/email_profile_etext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:inputType="textEmailAddress"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:text=""
                        android:hint="E-mail"
                        android:fontFamily="@font/opensans_regular"
                        android:singleLine="true"
                        android:textColorHint="@color/darkgrey"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/email_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:fontFamily="@font/opensans_regular"
                    android:visibility="gone"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/background_edit_text">

                    <EditText
                        android:id="@+id/phonenumber_profile_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:text=""
                        android:hint="Phone number"
                        android:fontFamily="@font/opensans_regular"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColorHint="@color/darkgrey"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/phone_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:fontFamily="@font/opensans_regular"
                    android:visibility="gone"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/background_edit_text">

                    <EditText
                        android:id="@+id/user_bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:hint="Bio"
                        android:fontFamily="@font/opensans_regular"
                        android:textColorHint="@color/darkgrey"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Social media Link"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/black"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/rectangle_back">

                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/twitter" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"

                        android:layout_marginRight="20dp"
                        android:background="@drawable/background_edit_text">


                        <EditText
                            android:id="@+id/twitter_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_marginRight="30dp"
                            android:background="@null"
                            android:hint="Enter twitter link"
                            android:singleLine="true"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/rectangle_back">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/facebook" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/background_edit_text">


                        <EditText
                            android:id="@+id/facebook_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_marginRight="30dp"
                            android:background="@null"
                            android:hint="Enter facebook link"
                            android:singleLine="true"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle_back">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/insta" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/background_edit_text">


                        <EditText
                            android:id="@+id/instagram_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_marginRight="30dp"
                            android:background="@null"
                            android:hint="Enter instagram link"
                            android:singleLine="true"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rectangle_back">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/youtube" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/background_edit_text">


                        <EditText
                            android:id="@+id/youtube_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/opensans_regular"
                            android:layout_marginRight="30dp"
                            android:background="@null"
                            android:hint="Enter youtube link"
                            android:singleLine="true"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="15sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_butoon_svae_changes"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rectangle_background_button">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Save Changes"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</ScrollView>