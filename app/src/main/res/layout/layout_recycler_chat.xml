<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sender"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/sendertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/br_reciver"
            android:fontFamily="@font/opensans_regular"
            android:padding="5dp"
            android:text="asda"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/reciver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="5dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/br_sender"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/recivertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:padding="5dp"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvChatReceiverTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
              android:text="12.22 pm"

               android:gravity="right"
                android:layout_below="@+id/recivertext"
                android:textColor="@color/black"
                android:textSize="7dp"
                android:textStyle="normal" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>